---
import Layout from "src/layouts/Layout.astro";
---

<Layout isPrivatePage>
  <div class="max-w-2xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Contact Lists</h1>
    <form class="space-y-6">
      <div class="flex flex-col">
        <label for="webhook" class="text-sm font-medium text-gray-700 mb-2">Webhook</label>
        <input 
          type="text" 
          id="webhook" 
          name="webhook" 
          class="rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
      </div>
      <button 
        type="submit"
        class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200"
      >
        Save changes
      </button>   
    </form>
  </div>
  <script>
    const webhookInput = document.getElementById('webhook') as HTMLInputElement;
    const saveButton = document.querySelector('button[type="submit"]');

    if (saveButton && webhookInput) {
      
    saveButton.addEventListener('click', (e) => {
      e.preventDefault();
      console.log(webhookInput.value);
    });
  }
  </script>
</Layout>

